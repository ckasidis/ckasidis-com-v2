---
import { HiArrowTopRightOnSquare } from 'react-icons/hi2';
import BaseLayout from '../components/layouts/BaseLayout.astro';
import NavLayout from '../components/layouts/NavLayout';
import HeaderSection from '../components/sections/HeaderSection.astro';
import { projects } from '../data/projects';
---

<BaseLayout>
	<NavLayout client:load current="/projects">
		<HeaderSection title="Projects" intro="Projects and Hackathons">
			I specialize in React, React Native, Next.js, Node.js, and Go. I&lsquo;m
			also proficient in Git, Docker, Kubernetes and has won second place from a
			web3 hackathon building an application on Ethereum.
		</HeaderSection>
		<section class="grid gap-y-6 pb-14">
			{
				projects.map((project) => (
					<div class="relative bg-white">
						<div class="h-56 sm:h-72 md:absolute md:left-0 md:h-full md:w-1/2">
							<img
								class="h-full w-full object-cover"
								src={project.image}
								alt=""
							/>
						</div>
						<div class="relative mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8 lg:py-16">
							<div class="md:ml-auto md:w-1/2 md:pl-10">
								<h2 class="font-semibold text-gray-500">
									{project.competition}
								</h2>
								<p class="mt-2 text-3xl font-bold tracking-tight sm:text-4xl">
									{project.title}
								</p>
								<p class="mt-3 text-gray-500">{project.description}</p>
								<div class="mt-8">
									<div class="inline-flex rounded-md shadow">
										<a
											href={project.link}
											target="_blank"
											rel="noopener noreferrer"
											class="inline-flex items-center justify-center rounded-md border border-transparent bg-gray-800 px-5 py-3 text-base font-medium text-white hover:bg-primary-600"
										>
											View source code
											<HiArrowTopRightOnSquare
												className="-mr-1 ml-3 h-5 w-5"
												aria-hidden="true"
											/>
										</a>
									</div>
								</div>
							</div>
						</div>
					</div>
				))
			}
		</section>
	</NavLayout>
</BaseLayout>
