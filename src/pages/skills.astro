---
import { skills } from '../data/skills';
import BaseLayout from '../layouts/BaseLayout.astro';
import HeaderSection from '../sections/HeaderSection.astro';
---

<BaseLayout current="/skills">
	<HeaderSection title="Skills" intro="Full Stack Engineer">
		I'm experienced in building full stack web and mobile applications,
		integrating web3, using Docker and Kubernetes, working with CI/CD workflows,
		and deploying projects to cloud providers.
	</HeaderSection>
	<section class="grid grid-cols-1 gap-8 sm:grid-cols-2 xl:grid-cols-3">
		{
			skills.map((item) => (
				<div class="pt-6 text-center">
					<div class="flow-root rounded-lg bg-gray-50 px-6 pb-8">
						<div class="-mt-6">
							<div>
								<span class="inline-flex items-center justify-center rounded-md bg-primary-600 p-3 shadow-lg">
									<item.icon
										className="h-6 w-6 text-white"
										aria-hidden="true"
									/>
								</span>
							</div>
							<h3 class="mt-8 text-lg lg:text-xl font-medium tracking-tight text-gray-900">
								{item.name}
							</h3>
							<p class="mt-5 text-base text-gray-500">{item.description}</p>
						</div>
					</div>
				</div>
			))
		}
	</section>
</BaseLayout>
